<script>      
  function checkPassword(form) { 
    password = form.password.value; 
    password1 = form.password1.value;  
    if (password != password1) { 
      document.getElementById("emailmsg").style.display=""
      return false; 
    }else{ 
      document.getElementById('errors').innerHTML="*Please enter a username*";
      return true; 
    } 
  } 
</script>

<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Cadastrar novo usuário</h3>
        </div>
        <img src="/img/logo.png" alt="Logo Patas" class="card-img-top mx-auto m-2 rounded-circle w-50">
        <div class="card-body">
          <form onSubmit = "return checkPassword(this)" action="/cadastrar" method="POST">
            <div class="form-group">
              <input oninvalid="this.setCustomValidity('campo obrigatório')" oninput="this.setCustomValidity('')" type="type" name="fullname" placeholder="nome completo" class="form-control" autofocus required/>
            </div>
            <div class="form-group">
              <input oninvalid="this.setCustomValidity('campo obrigatório')" oninput="this.setCustomValidity('')" type="text" name="username" placeholder="usuário" class="form-control" required/>
            </div>
            <div class="form-group">
              <input oninvalid="this.setCustomValidity('campo obrigatório')" oninput="this.setCustomValidity('')" type="password" name="password" placeholder="senha" class="form-control" required/>
            </div>
            <div class="form-group">
              <input oninvalid="this.setCustomValidity('campo obrigatório')" oninput="this.setCustomValidity('')" type="password" name="password1" placeholder="confirme a senha" class="form-control" required/>
            </div>
            <div id="emailmsg" style="color:Red;display:none">Senhas não compatíveis</div>
            <br />
            <div class="form-group">
              <button class="btn btn-success btn-block">
                Cadastrar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>