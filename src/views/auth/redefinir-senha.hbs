<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Redefinir Senha</h3>
        </div>
        <img src="/img/logo.png" alt="Logo Patas" class="card-img-top mx-auto m-2 rounded-circle w-50">
        <div class="card-body">
          <form action="/redefinir-senha" method="POST">
            <div align="left" class="form-group">
              &nbspUsuário
              <input type="text" name="username" class="form-control" placeholder="usuário" autofocus>
            </div>
            <div align="left" class="form-group">
              &nbspNova senha
              <input type="password" name="password" class="form-control" placeholder="nova senha">
            </div>
            <div class="form-group">
              <button class="btn btn-secondary btn-block">
                Salvar
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>